<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:background="@drawable/joker"
        android:id="@+id/animal_img"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/pan_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="pan"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/aug_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="aug" />

        <Button
            android:id="@+id/graza_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="groza" />

        <Button
            android:id="@+id/dp_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/pan_btn_tost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="pan"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/aug_btn_tost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="aug" />

        <Button
            android:id="@+id/graza_btn_tost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="groza" />

        <Button
            android:id="@+id/dp_btn_tost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:text="save"
        android:layout_marginStart="10dp"
        android:layout_width="380dp"
        android:layout_height="50dp"/>

</LinearLayout>